<odoo>
    <data>
        <template id="price_comparison_id_landscape">
            <t t-call="web.html_container">
                <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name"
                     t-att-data-oe-id="doc and doc.id">
                    <t t-call="price_comparison_report.sannad_bags_header_footer_landscape"/>
                    <div class="page">
                        <br/>
                        <t t-foreach="docs" t-as="o">
                            <div class=" text-center">
                                <h3>PRICE COMPARISON SHEET</h3>
                            </div>
                            <t t-if="orders.comparison_lines">
                                <table>
                                    <tr>
                                        <td width="30%">
                                            <table class="table table-bordered table-sm">
                                                <thead>
                                                    <tr style="font-size:11px">
                                                        <th style="text-align:center" rowspan="2">S.No.</th>
                                                        <th style="text-align:center" rowspan="2">DESCRIPTION
                                                        </th>
                                                        <th style="text-align:center" rowspan="2">QTY</th>
                                                        <th style="text-align:center">UOM</th>
                                                    </tr>


                                                </thead>
                                                <t t-set="sr_no" t-value="0"/>
                                                <tr style="font-size:11px">
                                                    <th colspan="4">&#160;</th>
                                                </tr>
                                                <t t-foreach="o.line_ids" t-as="line">
                                                    <t t-set="sr_no" t-value="sr_no + 1"/>
                                                    <tbody>
                                                        <tr style="font-size:11px">
                                                            <td style="text-align:center">
                                                                <span t-esc="sr_no"/>
                                                            </td>
                                                            <td style="text-align:left">
                                                                <span t-esc="line.product_id.name"/>
                                                            </td>
                                                            <td style="text-align:center">
                                                                <span t-esc="line.product_qty"/>
                                                            </td>
                                                            <td style="text-align:center">
                                                                <span t-esc="line.product_uom_id.name"/>
                                                            </td>

                                                        </tr>
                                                    </tbody>
                                                </t>

                                                <tr>
                                                    <td>&#160;</td>
                                                    <td style="text-align:right">TOTAL SAR NET</td>
                                                    <td>&#160;</td>
                                                    <td>&#160;</td>
                                                </tr>
                                                <tr>
                                                    <td>&#160;</td>
                                                    <td style="text-align:right">DELIVERY TIME</td>
                                                    <td>&#160;</td>
                                                    <td>&#160;</td>
                                                </tr>
                                                <tr>
                                                    <td>&#160;</td>
                                                    <td style="text-align:right">PAYMENT TERMS</td>
                                                    <td>&#160;</td>
                                                    <td>&#160;</td>
                                                </tr>
                                                <tr>
                                                    <td>&#160;</td>
                                                    <td style="text-align:right">WARRANTY</td>
                                                    <td>&#160;</td>
                                                    <td>&#160;</td>
                                                </tr>

                                            </table>
                                        </td>
                                        <t t-foreach="orders" t-as="rfq">
                                            <t t-if="rfq.comparison_lines">
                                                <t t-if="o.name == rfq.origin">
                                                    <td style="page-break-inside:avoid; page-break-before:auto">
                                                        <table class="table table-bordered table-sm">
                                                            <thead>
                                                                <tr style="font-size:11px">
                                                                    <th class="text-center" colspan="3">
                                                                        <span t-field="rfq.partner_id.name"/>
                                                                    </th>
                                                                </tr>
                                                                <tr style="font-size:11px">
                                                                    <th style="text-align:center">UNIT PRICE</th>
                                                                    <th style="text-align:center">TOTAL</th>
                                                                    <th style="text-align:center">BRAND</th>
                                                                </tr>
                                                            </thead>
                                                            <t t-set="total" t-value="0"/>
                                                            <t t-foreach="rfq.comparison_lines" t-as="rfq_line">
                                                                <tbody>
                                                                    <tr style="font-size:11px">
                                                                        <td style="text-align:center">
                                                                            <span t-esc="rfq_line.price_unit"/>
                                                                        </td>
                                                                        <td style="text-align:center">
                                                                            <span t-esc="rfq_line.price_subtotal"/>
                                                                        </td>
                                                                        <td style="text-align:center">
                                                                            <span t-esc="rfq_line.brand"/>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                                <t t-set="total"
                                                                   t-value="total + rfq_line.price_subtotal"/>
                                                            </t>
                                                            <tr>
                                                                <td>&#160;</td>
                                                                <th style="text-align:center; font-size:11px">
                                                                    <span t-esc="total"/>
                                                                </th>
                                                                <td>&#160;</td>
                                                            </tr>

                                                            <tr>
                                                                <td>&#160;</td>
                                                                <td style="text-align:center; font-size:11px">&#160;
                                                                </td>
                                                                <td>&#160;</td>
                                                            </tr>

                                                            <tr>
                                                                <td>&#160;</td>

                                                                <th style="text-align:center; font-size:11px">
                                                                    <span t-esc="rfq.payment_term_id.name"/>
                                                                </th>
                                                                <td>&#160;</td>
                                                            </tr>

                                                            <tr>
                                                                <td>&#160;</td>
                                                                 <th style="text-align:center; font-size:11px">
                                                                    <span t-esc="rfq.warranty"/>
                                                                </th>
                                                                <td>&#160;</td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </t>
                                            </t>
                                        </t>
                                    </tr>
                                </table>
                            </t>
                            <t t-if="not orders.comparison_lines">
                                <table class="table table-bordered table-sm">
                                    <thead>
                                        <tr style="font-size:11px">
                                            <th style="text-align:center">S.No.</th>
                                            <th style="text-align:center">DESCRIPTION
                                            </th>
                                            <th style="text-align:center">QTY</th>
                                            <th style="text-align:center">UOM</th>
                                        </tr>


                                    </thead>
                                    <t t-set="sr_no" t-value="0"/>

                                    <t t-foreach="o.line_ids" t-as="line">
                                        <t t-set="sr_no" t-value="sr_no + 1"/>
                                        <tbody>
                                            <tr style="font-size:11px">
                                                <td style="text-align:center">
                                                    <span t-esc="sr_no"/>
                                                </td>
                                                <td style="text-align:left">
                                                    <span t-esc="line.product_id.name"/>
                                                </td>
                                                <td style="text-align:center">
                                                    <span t-esc="line.product_qty"/>
                                                </td>
                                                <td style="text-align:center">
                                                    <span t-esc="line.product_uom_id.name"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </t>
                                </table>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>


        <template id="sannad_bags_header_footer_landscape">
            <t t-set="company" t-value="user.company_id"/>
            <div class="header first-page row" style="padding-left:40px">
                <img src="/price_comparison_report/static/description/sanad_header.png"
                     style="height:100px; width:1200px;"/>
            </div>
            <div class="footer">
                <img src="/price_comparison_report/static/description/sannad_footer.png"
                     style="height:100px; width:1200px; padding-left:40px"/>
            </div>
        </template>
    </data>
</odoo>